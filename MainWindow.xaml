<Window x:Class="WpfSimpleCal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSimpleCal"
        mc:Ignorable="d"
        Title="SimpleCalCulate" Height="850" Width="1200">
    <Grid Background="#47489a">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Green" BorderThickness="4" Height="814" VerticalAlignment="Center" Margin="10,10,10,10">
            <!-- Border는 자식 요소를 하나만 가질 수 있으므로 StackPanel을 하나만 남깁니다. 
                 두 개의 StackPanel이 필요하다면 하나의 StackPanel로 합치거나, 
                 Border 내부에 Grid를 두고 그 안에 StackPanel을 배치하세요. 
                 여기서는 Grid를 사용하여 두 StackPanel을 배치합니다. -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="ST1" HorizontalAlignment="Left" Margin="6,6,0,0" Orientation="Vertical" VerticalAlignment="Top" Grid.Column="0">
                    <Image Height="300" Width="300" RenderTransformOrigin="-4.127,0.425" x:Name="MainIcon" Source="/radiyuSD.png" Stretch="Fill" Cursor="Arrow">
                        <Image.OpacityMask>
                            <ImageBrush ImageSource="/radiyuSD.png" TileMode="Tile" Opacity="1"/>
                        </Image.OpacityMask>
                    </Image>
                </StackPanel>
                <StackPanel x:Name="ST2" HorizontalAlignment="Left" Margin="6,6,0,0" Orientation="Vertical" VerticalAlignment="Top" Grid.Column="1" Height="300" Width="823">
                    <ListBox x:Name="LBRadiyu1" d:ItemsSource="{d:SampleData ItemCount=5}" Height="302" FontFamily="Yu Mincho" FontSize="25" Background="#4b7ebd"/>
                </StackPanel>                
            </Grid>
        </Border>
    </Grid>
</Window>
